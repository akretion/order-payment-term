<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_order_payment_form" model="ir.ui.view">
            <field name="name">sale.order.payment.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_button_confirm']" position="replace">
                    <button name="confirm" states="draft" string="Confirm Sale" type="object" groups="base.group_user"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>